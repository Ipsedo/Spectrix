<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/activity_main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:background="@drawable/background"
    tools:context="com.samuelberrien.spectrix.MainActivity">

    <Button
        android:text="@string/start_button"
        android:background="@drawable/button"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/start_button"
        android:onClick="start"
        android:layout_centerVertical="true"
        android:layout_alignRight="@+id/use_sample_check_box"
        android:layout_alignEnd="@+id/use_sample_check_box"
        android:layout_alignLeft="@+id/use_sample_check_box"
        android:layout_alignStart="@+id/use_sample_check_box"
        android:textSize="@dimen/text_size"/>

    <TextView
        android:text="@string/visualization_instruction"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_above="@+id/select_visualisation"
        android:layout_marginBottom="5dp"
        android:id="@+id/choose_visualisation"
        android:textAppearance="@style/TextAppearance.AppCompat.Body1"
        android:gravity="center"
        android:layout_alignParentRight="true"
        android:layout_alignParentEnd="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:textSize="@dimen/text_size"/>

    <CheckBox
        android:text="@string/use_sample_check_box"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/use_sample_check_box"
        android:onClick="sample"
        android:layout_below="@+id/visualize_music_or_sample"
        android:layout_centerHorizontal="true"
        android:buttonTint="@color/colorButton"
        android:textSize="@dimen/text_size"
        android:gravity="center"/>

    <Spinner
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/select_visualisation"
        android:layout_marginBottom="28dp"
        android:layout_alignParentBottom="true"
        android:background="@drawable/gradient_spinner"
        android:popupBackground="@drawable/gradient_spinner"/>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/app_name"
        android:textAppearance="@style/TextAppearance.AppCompat.Body1"
        android:textSize="@dimen/title_text_size"
        android:gravity="center"
        android:id="@+id/app_title"
        android:layout_alignParentTop="true"
        android:layout_alignParentStart="true"
        android:layout_alignParentEnd="true" />

    <TextView
        android:text="@string/music_instruction"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/visualize_music_or_sample"
        android:textAppearance="@style/TextAppearance.AppCompat.Body1"
        android:gravity="center"
        android:layout_marginTop="22dp"
        android:layout_below="@+id/start_button"
        android:textSize="@dimen/text_size"/>

    <CheckBox
        android:text="@string/use_vr_check_box"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/use_vr_check_box"
        android:onClick="useVr"
        android:buttonTint="@color/colorButton"
        android:textSize="@dimen/text_size"
        android:gravity="center"
        android:layout_above="@+id/choose_visualisation"
        android:layout_alignStart="@+id/use_sample_check_box"
        android:layout_alignEnd="@+id/use_sample_check_box" />
</RelativeLayout>
